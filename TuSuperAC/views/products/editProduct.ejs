<%- include('../partials/head') %>
  <link rel="stylesheet" href="/stylesheets/editStyles.css">

  <body>

    <%- include('../partials/navBar') %>

      <main style="margin-top: 113px;">
        <div class="container py-4">
          <div class="accordion" id="accordionGeneral">

  
      <!-- PRODUCTOS -->
      <div class="accordion-item">
        <h2 class="accordion-header" id="headingProductos">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
            data-bs-target="#collapseProductos" aria-expanded="false" aria-controls="collapseProductos">
            Productos
          </button>
        </h2>
        <div id="collapseProductos" class="accordion-collapse collapse" aria-labelledby="headingProductos">
          <div class="accordion-body">

            <div class="row mb-3">
              <div class="col-md-9">
                <input type="text" id="busquedaProducto" class="form-control"
                  placeholder="Buscar por código o descripción...">
              </div>
              <div class="col-md-3">
                <button class="btn btn-custom w-100 btnProductobusquedaSeccion"
                  onclick="buscarProductos()">Buscar</button>
              </div>
            </div>

            <hr>

            <div class="table-responsive">
              <table class="table table-bordered table-dark align-middle">
                <thead>
                  <tr>
                    <th>ID</th>
                    <th>Código</th>
                    <th>Sección</th>
                    <th>Subsección</th>
                    <th>Descripción</th>
                    <th>Tipo</th>
                    <th>Precio</th>
                    <th>Visible</th>
                    <th>Opciones</th>
                  </tr>
                </thead>
                <tbody id="tablaProductos"></tbody>
              </table>
            </div>

            <div class="d-flex justify-content-end mt-3">
              <button class="btn btn-custom me-2" onclick="crearProducto()">Crear</button>
              <button class="btn btn-custom" onclick="guardarProductos()">Guardar</button>
            </div>

          </div>
        </div>
      </div>



          </div>
        </div>
      </main>
      <script src="/javascripts/products/editProduct.js"></script>
      <%- include('../partials/footer') %>