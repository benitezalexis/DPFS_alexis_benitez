  <style>
    :root {
      --azul-marino: #001F3F;
      --amarillo-dorado: #FFC300;
      --blanco: #FFFFFF;
      --gris-claro: #F1F1F1;
      --gris-fondo: #F8F9FA;
      --rojo-oferta: #FF5733;
      --verde-positivo: #2ECC71;
      --titulo-font: 'Poppins', sans-serif;
      --texto-mediano: 'Inter', sans-serif;
      --texto-chico: 'Roboto', sans-serif;
    }

    html,
    body {
      height: 100%;
      margin: 0;
      padding: 0;
      display: flex;
      flex-direction: column;
      min-height: 100vh;
      font-family: var(--texto-mediano);
      background-color: var(--azul-marino);
      color: var(--blanco);
    }

    main {
      flex: 1;
    }

    h1,
    h2,
    h3,
    h4 {
      font-family: var(--titulo-font);
      font-weight: 600;
      color: var(--amarillo-dorado);
    }

    .tabsCarrito {
      color: var(--amarillo-dorado) !important;
    }

    .navbar {
      background-color: var(--azul-marino);
    }

    .navbar-brand {
      color: var(--azul-marino);
      font-family: var(--titulo-font);
      font-size: 1.8rem;
    }

    .nav-link {
      color: var(--azul-marino);
    }

    .nav-link:hover {
      color: var(--amarillo-dorado);
    }

    .btn-primary {
      background-color: var(--amarillo-dorado);
      border: none;
      color: var(--azul-marino);
    }

    .btn-primary:hover {
      background-color: #e0a800;
    }

    .btn-success {
      background-color: var(--verde-positivo);
      border: none;
    }

    .btn-success:hover {
      background-color: #28a745;
    }

    .card {
      background-color: var(--blanco);
      color: var(--azul-marino);
      height: 100%;
      display: flex;
      flex-direction: column;
    }

    .card-body {
      flex-grow: 1;
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .descProduct {
      min-height: 48px;
      overflow: hidden;
      text-overflow: ellipsis;
      color: #001F3F;
      /* Azul marino si usás esa paleta */
    }

    .card-title {
      color: var(--azul-marino);
    }

    .precioProductTipo {
      color: var(--azul-marino);
    }

    .suscripcion {
      background-color: var(--gris-fondo);
      padding: 40px 20px;
      text-align: center;
      color: var(--azul-marino);
    }

    footer {
      background-color: var(--azul-marino);
      color: var(--blanco);
      padding: 20px 0;
      text-align: center;
    }

    footer a {
      color: var(--amarillo-dorado);
    }

    .promocionesEmailSend {
      color: var(--azul-marino) !important;
    }

    .carousel-inner img {
      width: 100%;
      height: auto;
      max-height: 400px;
      object-fit: contain;
      background-color: var(--gris-fondo);
      padding: 10px;
    }

    .navbar-toggler:focus,
    .navbar-toggler:active,
    .navbar-toggler-icon:focus {
      box-shadow: none !important;
      outline: none !important;
      background-color: transparent !important;
    }

    .carrito-scroll {
      max-height: 400px;
      overflow-y: auto;
      padding-right: 10px;
      scrollbar-width: none;
      /* Firefox */
      -ms-overflow-style: none;
      /* Internet Explorer 10+ */
    }

    .carrito-scroll::-webkit-scrollbar {
