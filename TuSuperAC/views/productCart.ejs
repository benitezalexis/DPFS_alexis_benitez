    <script>
      function mostrarPaso(n) {
        // Oculta todos
        document.querySelectorAll('.paso').forEach(p => p.classList.add('d-none'));
        document.querySelectorAll('#progresoTabs .nav-link').forEach(p => p.classList.remove('active'));
        // Muestra el actual
        document.getElementById('paso' + n).classList.remove('d-none');
        document.querySelectorAll('#progresoTabs .nav-link')[n - 1].classList.add('active');
      }
